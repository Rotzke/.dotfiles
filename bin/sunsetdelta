#!/bin/bash
NOW=`date +%s`
SUNSET=`date -d "$(curl -s https://www.timeanddate.com/sun/ukraine/dnipro | grep "Sunset Today" | cut -d ">" -f 65 | cut -d "<" -f 1)" +%s`

if [ $NOW -lt $SUNSET ] 
then
    FIN_DIFF=$(( $SUNSET-$NOW ))
    echo -n "Sunset timedelta: " && echo -en $YELLOW"-" && echo -e $(date -u --date @$FIN_DIFF +"%H:%M")$NC
elif [ $NOW -gt $SUNSET ]
then
    FIN_DIFF=$(( $NOW-$SUNSET ))
    echo -n "Sunset timedelta: " && echo -en $YELLOW"+" && echo -e $(date -u --date @$FIN_DIFF +"%H:%M")$NC
fi

