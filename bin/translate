#!/bin/bash
lang=$2

if [[ -z $1 ]]
then
    echo -e $RED"Enter the query!"$NC
    exit 1
elif [[ -z $2 ]]
then
    lang='ru'
elif [[ $3 ]]
then
    echo -e $RED"Only two parameters allowed."$NC
    exit 1
fi
curl -sw "\n" "https://translate.yandex.net/api/v1.5/tr.json/translate?key={API_KEY}&text=$1&lang=$lang" | jq -r '.text'


