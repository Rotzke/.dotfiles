#!/bin/bash

gsettings set org.gnome.system.proxy mode $1 

case $1 in
    "manual"*)
        echo -en $GREEN'Tor proxy enabled: '$NC && echo `curl -s -x socks://127.0.0.1:9050 ifconfig.co` && touch ~/.proxy.lock
        ;;
    "none"*)
        echo -en $RED'Tor proxy disabled: '$NC && echo `curl -s ifconfig.co` && rm ~/.proxy.lock
        ;;
esac

